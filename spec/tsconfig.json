{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "target": "esnext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "../src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
     "typeRoots" : ["../node_modules/@types", "../src/types"]
  },
  "exclude": [
    "node_modules"
  ]
}
